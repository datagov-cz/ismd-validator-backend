@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix slovníky: <https://slovník.gov.cz/generický/datový-slovník-ofn-slovníků/pojem/> .

# Warning rule: Concept should have description or definition
<https://slovník.gov.cz/shacl/lokální/popis-a-definice-pojmu>
    a sh:NodeShape ;
    sh:targetClass slovníky:pojem ;
    sh:name "Popis pojmu"@cs ;
    sh:description "Ensures that each concept has either description or definition" ;
    sh:message "Pojem nemá vyplněný jeden nebo více z těchto údajů: popis, definice"@cs ;
    sh:severity sh:Warning ;

    # At least one of description or definition should exist
    sh:or (
        # Has dct:description
        [ sh:path dct:description ; sh:minCount 1 ]

        # Has skos:definition
        [ sh:path skos:definition ; sh:minCount 1 ]

        # Backup option
        [ sh:path rdfs:comment ; sh:minCount 1 ]
    ) .